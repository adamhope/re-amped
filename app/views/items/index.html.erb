<h1>Listing items</h1>

<table>
  <tr>
    <th>Powerhouse</th>
    <th>Image url</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.powerhouse_id %></td>
    <td><%=h item.image_url %></td>

    <td><a href="/items/<%= item.powerhouse_id %>">Show</a></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>